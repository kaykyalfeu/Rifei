# Configuração de ambiente para testes - Rifei
# Este arquivo é usado durante a execução dos testes

# Aplicação
APP_NAME=Rifei Test
APP_ENV=testing
APP_DEBUG=True
APP_URL=http://localhost:8000
SECRET_KEY=test-secret-key-do-not-use-in-production

# Banco de Dados (SQLite in-memory para testes rápidos)
DATABASE_URL=sqlite+aiosqlite:///:memory:

# JWT
JWT_SECRET_KEY=test-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Mercado Pago (valores fake para testes)
MERCADOPAGO_ACCESS_TOKEN=TEST-fake-token
MERCADOPAGO_PUBLIC_KEY=TEST-fake-public-key
MERCADOPAGO_WEBHOOK_SECRET=test-webhook-secret

# Upload
MAX_UPLOAD_SIZE=5242880
UPLOAD_DIR=tests/temp_uploads
